package application;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

public class Program {

	public static void main(String[] args) throws ParseException {
		// TODO Auto-generated method stub
		
		Date x1 = new Date();
		SimpleDateFormat sdf1 = new SimpleDateFormat("dd/MM/yyy");
		SimpleDateFormat sdf2 = new SimpleDateFormat("dd/MM/yyy HH:mm:ss");
		
		Date y1 = sdf1.parse("30/03/2020");
		Date y2 = sdf2.parse("30/03/2020 11:10:35");
		
		System.out.println(y1);
		System.out.println(y2);
		
		System.out.println(sdf1.format(y1));
		System.out.println(sdf2.format(y2));
		System.out.println("Data e hora atual: " + sdf2.format(x1));
		


	}

}
